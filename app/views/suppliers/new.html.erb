<%= form_tag '/supplier', method: :post do %>
  <div>
<%= label_tag :user %>
<%= text_field_tag :user, current_user.email %>
  </div>

   <div>
<%= label_tag :name %>
<%= text_field_tag :name %>
  </div>

<div>
<%= label_tag :email %>
<%= text_area_tag :email %>
  </div> 

<div>
<%= label_tag :phone %>
<%= text_area_tag :phone %>
  </div> 

<div>
<%= submit_tag "Submit Supplier Info" %>
</div>

<% end %> 