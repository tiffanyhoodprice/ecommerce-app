<%= form_tag '/products', method: :post do %>
  <div>
<%= label_tag :name %>
<%= text_field_tag :name %>
  </div>

<div>
<%= label_tag :size %>
<%= text_area_tag :size %>
  </div> 

<div>
<%= label_tag :price %>
<%= text_area_tag :price %>
  </div> 

<div>
<%= label_tag :description %>
<%= text_area_tag :description %>
</div>

<div>
<%= label_tag :image %>
<%= text_area_tag :image %>
</div>

<div>
<%= submit_tag "Submit Product Info" %>
</div>

<% end %>