<center>
  <h1 class="title">Welcome to<br>Shoes4YOU.com</h1>
  <%= link_to "Show Discounted Items", "/products?view=discounted" %>
</center>
<div class="row">
<% @product_list.each do |shoe| %>
  <div class="col-md-3">
    <div class="product-box">
      <a href="/products/<%= shoe.id %>"> 
    <p> Item: <%= shoe.name %></p>
    <p>Size: <%= shoe.size %></p>
    <p>Price: <%= shoe.price %></p>
    <p>Description: <%= shoe.description %></p>
    <img src="<%= shoe.image %>" class="img-responsive">
   
    </a>

  </div>
 </div>
<% end %>
</div>