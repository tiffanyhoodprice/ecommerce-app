<h1>Your Shopping Cart</h1>

<table class='table'>
  <tr>
    <th>Product Name</th>
    <th>Quantity</th>
    <th>Unit Price</th> 
    <th>Edit Cart</th> 
  </tr>
    
  <% @carted_products.each do |carted_product| %>
    <tr>
      <td><%= carted_product.product.name %></td>
      <td><%= carted_product.quantity %></td>
      <td><%= carted_product.product.price %></td>
      <td><%= button_to "Remove", "/carted_products/#{carted_product.id}", method: :delete %></td>
    </tr>
    <% end %>
</table>
<table class='table'>
<tr>
    <th>Subtotal:</th>
    <th>$<%= @subtotal %></th>
    <th>Tax:</th>
    <th>$<%= @tax %></th>
    <th>Total:</th> 
    <th>$<%= @total %></th> 
  </tr>
</table>
<%= button_to "Confirm and Purchase", "/orders", method: :post %>


